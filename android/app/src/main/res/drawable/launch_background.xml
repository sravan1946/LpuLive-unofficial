<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Loud magenta background to verify startup theme -->
    <item android:drawable="@color/splash_bg" />
    <!-- Centered white circle to be very obvious -->
    <item>
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp"/>
            <solid android:color="@color/splash_circle"/>
        </shape>
    </item>
    <!-- Optional: a small inner circle -->
    <item>
        <inset android:insetLeft="30dp" android:insetTop="30dp" android:insetRight="30dp" android:insetBottom="30dp">
            <shape android:shape="oval">
                <solid android:color="@color/splash_bg"/>
            </shape>
        </inset>
    </item>
  </layer-list>
